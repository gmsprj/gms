#!/bin/bash
DBNAME=$GM_DBNAME
DBUSER=$GM_DBUSER
DBPASS=$GM_DBPASS
BASEDIR=$(dirname "$0")
SQLPATH="$BASEDIR/../db/gm-boardsadd.sql"

NAME="$1"
DESC="$2"

if [ -z "$NAME" ]; then
    NAME="No name"
fi

if [ -z "$DESC" ]; then
    DESC="No description."
fi

mysql -u $DBUSER -p$DBPASS $DBNAME <<EOF
`cat $SQLPATH | sed "s/{{ name }}/$NAME/g" | sed "s/{{ description }}/$DESC/g"`
EOF

exit 0

