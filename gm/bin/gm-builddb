#!/bin/bash
#
# DBのテーブルを再構築する。
#
DBUSER="$GM_DBUSER"
DBNAME="$GM_DBNAME"
BASEDIR=$(dirname "$0")

echo db-user:$DBUSER
echo db-name:$DBNAME
echo ""

echo "上記の DB のテーブルを再構築して初期化します。"
echo "現在のテーブルは全て破棄されます。"
gm-confirm "本当に実行しますか？"
if [ $? -ne 0 ]; then
    exit 1
fi

mysql -u $DBUSER -p $DBNAME <<EOF
`cat $BASEDIR/../../db/gm-builddb.sql`
EOF

exit 0

