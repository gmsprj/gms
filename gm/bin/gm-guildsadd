#!/bin/bash
DBNAME="$GM_DBNAME"
DBUSER="$GM_DBUSER"
DBPASS="$GM_DBPASS"
BASEDIR=$(dirname "$0")
SQLPATH="$BASEDIR/../db/gm-guildsadd.sql"

GUILDNAME="$1"
GUILDDESC="$2"

if [ -z "$GUILDNAME" ]; then
    GUILDNAME="No name guild"
fi

if [ -z "$GUILDDESC" ]; then
    GUILDDESC="No description."
fi

mysql -u $DBUSER -p$DBPASS $DBNAME <<EOF
`cat $SQLPATH | sed "s/{{ name }}/$GUILDNAME/g" | sed "s/{{ description }}/$GUILDDESC/g"`
EOF

exit 0

