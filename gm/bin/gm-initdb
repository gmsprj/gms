#!/bin/bash
#
# DBのテーブルを初期化する。
#

gm-cleardb 
if [ $? -ne 0 ]; then
    exit 1
fi

gm-sitesadd 'GMS 0.0.4' '労働者のユニオン・サイトです。 ギルド（同業者組合）に参加することで議論に参加可能です。'
if [ $? -ne 0 ]; then
    exit 1
fi

gm-guildsadd '入門者ギルド' '入門者のためのギルドです。'
if [ $? -ne 0 ]; then
    exit 1
fi

gm-guildsadd '開発者ギルド' '開発者のためのギルドです。'
if [ $? -ne 0 ]; then
    exit 1
fi

gm-boardsadd 'ロビー' 'ロビー板'
if [ $? -ne 0 ]; then
    exit 1
fi

gm-newsadd 'ニュースです。'
if [ $? -ne 0 ]; then
    exit 1
fi

exit 0

