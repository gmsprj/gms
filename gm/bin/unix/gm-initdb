#!/bin/bash
#
# DBのテーブルを初期化する。
#
DBUSER="$GM_DBUSER"
DBNAME="$GM_DBNAME"
BASEDIR=$(dirname "$0")
INITDBSQL=$BASEDIR/../../db/gm-initdb.sql

echo db-user:$DBUSER
echo db-name:$DBNAME

echo "上記の DB を初期化します。テーブルは再構築されません。"
gm-confirm "本当に実行しますか？"
if [ $? -ne 0 ]; then
    exit 0
fi

NOW=`date +%Y-%m-%d`

mysql -u $DBUSER -p $DBNAME < $INITDBSQL

